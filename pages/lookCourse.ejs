<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

     <!-- Styles -->

     <link rel="stylesheet" href="/stylesheets/style02.css">

     <script src="/Js/funcional.js" defer></script>

    <script src="/Js/edit.js" defer></script>
    <script src="/Js/delete.js" defer></script>

    <script type="module" src="/Js/SignOutStatus.js" defer></script>

    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" defer></script>
</head>
<body>
    <div class="container_inicio">
        <%- include ('Inicio.ejs') %>

        <div class="container_interactive">

    <div class="Cursos">

        
        <%if(courses.length>0){%>

    <%courses.forEach(course => {%>
        <div class="container_cursos">
        <h4>Curso: <%=course.name%></h4>
        <div class="subcontainer_cursos">
            <h4>Docente: <%=course.teacherName%></h4>
        <h4>Horas por semana: <%=course.hourWeek%></h4>
        <h4>Activo: <%=course.active%></h4>

       <div class="buttonCard">
        <button type="submit" class="Editar" data-up="<%=course._id%>"><i class="bi bi-pencil"></i></button>
        <button type="submit" class="Borrar" data-id="<%=course._id%>"><i class="bi bi-trash-fill"></i></button>
        </div>
       </div>
    </div>
    <%})%>

            <%}%>
        
    </div>
    </div>
</body>
</html>